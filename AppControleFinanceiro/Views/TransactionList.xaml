<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionList"
             Title="TransactionList"
             NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>

        <Grid ColumnDefinitions="50, *, auto" Padding="15">
            <Label Text="S" VerticalOptions="Center" HorizontalOptions="Center" FontSize="18" BackgroundColor="White"/>
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Salário"/>
                <Label Text="10/10/2022" TextColor="#BABABA"/>
            </VerticalStackLayout>
            <Label Grid.Column="2" Text="R$ 3.600,00" TextColor="{StaticResource Tertiary}" VerticalOptions="Center"/>

        </Grid>


        <Button 
            Text="+" 
            Clicked="OnButtonClicked_To_TransactionAdd" HorizontalOptions="Center"/>

        <Button 
            Text="Edit" 
            Clicked="OnButtonClicked_To_TransactionEdit" HorizontalOptions="Center"/>
        
    </VerticalStackLayout>
</ContentPage>